{
  "name": "electron-vue3-app",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:start-electron\" \"npm:start-vite\"",
    "start-electron": "wait-on http://localhost:5173 && ts-node electron/main.ts",
    "start-vite": "cd frontend && npm run dev",
    "build": "npm run build-vite && npm run build-electron",
    "build-vite": "cd frontend && npm run build",
    "build-electron": "tsc -p tsconfig.json"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  }
}
